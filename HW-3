	function headFunction() {
		let name = prompt(`Hello! What is your name?`);
		let age = prompt(`Hello ${name}, how old are you?`)
		let email = prompt(`What is your email address?`);
		if (age >= 18) {
		alert(`Thank you ${name} for your subscription, you will receive a confirmation email shortly to ${email}😁`);
	} else {
		alert(`Thank you ${name} for your application, unfortunately you are not old enough to subscribe. `)
	}
	}

	let subscribeButton = document.querySelector ("button");
	subscribeButton.addEventListener("click", headFunction)

